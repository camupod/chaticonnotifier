{
  "manifest_version": 2,
   "name": "Chat Icon Notifier for Google Chat™",
   "description": "A simple extension to change the Gmail™ tab icon when you receive a new chat message!",
   "version": "2.0.0",

   "content_scripts": [ {
      "js": ["chatnotifier.js"],
      "matches": [
      	"http://mail.google.com/*",
      	"https://mail.google.com/*"
      ],
      "run_at": "document_end"
   } ],
   "icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
